{
  "version": "1.0.0",
  "scan": {
    "extensions": [
      ".ts",
      ".tsx",
      ".js",
      ".jsx",
      ".html"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "build",
      ".git",
      "coverage"
    ],
    "minStringLength": 2
  },
  "i18n": {
    "outputDir": "./src/i18n",
    "languages": [
      "en",
      "hi",
      "kn"
    ],
    "constantsFile": "./src/i18n/constants.ts",
    "keyPrefix": ""
  },
  "replacement": {
    "importPath": "./i18n/constants",
    "importName": "TEXT",
    "functionName": "t"
  }
}